@model RiffRadar.Models.DataTransfer.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

@if (Model.ShowRequestId)
{
    <h4>
        <strong><code>@Model.RequestId</code></strong>
    </h4>
}

@if(ViewBag.ErrorTitle != null)
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h2 class="text-danger">@ViewBag.ErrorMessage</h2>
} 
else
{
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request. Please contact support.</h2>
}
